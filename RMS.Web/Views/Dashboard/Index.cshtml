    <script>
                // --------------------------------------
        // 1. Setup & Utilities
        // --------------------------------------
        const langButtons = document.querySelectorAll('.lang-btn');
        const html = document.documentElement;
        const mainContent = document.querySelector('.main-content');
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const navLinks = document.querySelectorAll('.nav-link');

        // Define initial active language based on HTML direction
        let currentLang = html.getAttribute('dir') === 'rtl' ? 'ar' : 'en';

        // Function to set the page's direction and language
        function setPageDirection(lang) {
            const dir = lang === 'ar' ? 'rtl' : 'ltr';
            html.setAttribute('lang', lang);
            html.setAttribute('dir', dir);
            currentLang = lang; // Update the global state
        }

        // Function to translate all elements
        function translateContent(lang) {
            document.querySelectorAll('[data-ar]').forEach(el => {
                const text = lang === 'ar' ? el.dataset.ar : el.dataset.en;
                // Check for common input types
                if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA') {
                    el.placeholder = text;
                } else if (el.tagName !== 'I') {
                    // Check if the element only contains an icon/span to prevent overwriting
                    // the icon tag. If the element is a plain container, update text.
                    const hasIcon = el.querySelector('i');
                    const hasBadge = el.querySelector('.badge');

                    if (!hasIcon && !hasBadge) {
                        el.textContent = text;
                    } else {
                        // If it contains an icon/badge, selectively update the text node (span)
                        const textSpan = el.querySelector('span[data-ar]');
                        if (textSpan) {
                            textSpan.textContent = text;
                        } else if (el.tagName === 'SPAN') { // For standalone spans like user-name/role
                             el.textContent = text;
                        }
                    }
                }
            });

            // Update arrow directions
            document.querySelectorAll('.card-action i').forEach(icon => {
                icon.className = lang === 'ar' ? 'fas fa-arrow-left' : 'fas fa-arrow-right';
            });
        }

        // Function to handle fetching and rendering new page content
        async function loadPage(controller, action) {
            const url = `/${controller}/${action}`;

            const errorHtml = (message, url) => `
                <div class="content-card" style="border: 2px solid #dc3545; background: #f8d7da; padding: 20px; text-align: center;">
                    <h2 class="card-title" data-en="Error Loading Page" data-ar="خطأ في تحميل الصفحة">Error Loading Page</h2>
                    <p style="color: #dc3545;">${message}</p>
                    <p data-en="Could not load content for: ${url}" data-ar="تعذر تحميل المحتوى للرابط: ${url}">Could not load content for: ${url}</p>
                </div>`;

            try {
                const response = await fetch(url);

                if (!response.ok) {
                    throw new Error(`HTTP Error: ${response.status} ${response.statusText}`);
                }

                const htmlContent = await response.text();

                // 1. Inject new HTML
                mainContent.innerHTML = htmlContent;

                // 2. Re-translate the newly loaded content using the current global language state
                translateContent(currentLang);

                // 3. Re-apply animations
                applyAnimations();

                // 4. Scroll to top and close sidebar on mobile
                window.scrollTo({ top: 0, behavior: 'smooth' });
                if (window.innerWidth <= 1024) {
                    sidebar.classList.remove('active');
                    sidebarOverlay.classList.remove('active');
                }

            } catch (error) {
                mainContent.innerHTML = errorHtml(error.message, url);
                // Ensure error message is translated by running it through the translator after insertion
                translateContent(currentLang);
            }
        }

        // Function to handle element visibility/fade-in
        function applyAnimations() {
            // ... (Your existing applyAnimations function remains the same)
            const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -50px 0px' };

            // Re-initialize observer to prevent observing stale elements
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.stat-card, .content-card').forEach(card => {
                // Reset styles before observing
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'all 0.6s ease-out';
                observer.observe(card);
            });
        }


        // --------------------------------------
        // 2. Event Listeners
        // --------------------------------------

        // Language Switcher (Updated to use setPageDirection)
        langButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const lang = btn.dataset.lang;

                // Update button states
                langButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                // Update document direction and language attributes
                setPageDirection(lang);

                // Apply translation to content
                translateContent(lang);
            });
        });

        // Sidebar Toggle (Uses a single function for toggling)
        const toggleSidebar = () => {
            sidebar.classList.toggle('active');
            sidebarOverlay.classList.toggle('active');
        };
        menuToggle.addEventListener('click', toggleSidebar);
        sidebarOverlay.addEventListener('click', toggleSidebar);

        // Navigation Click Handler (Main Logic - Modified to handle ASP.NET Core Tag Helpers by falling back to data-page if href is just '#')
        navLinks.forEach(link => {
            // Check for the ASP.NET Core Tag Helper attributes and construct the URL
            // since the original HTML uses them but the original JS only used `href`.
            const controllerAttr = link.getAttribute('asp-controller');
            const actionAttr = link.getAttribute('asp-action');
            const dataPageAttr = link.getAttribute('data-page');

            link.addEventListener('click', (e) => {
                e.preventDefault();

                let controller = controllerAttr;
                let action = actionAttr || 'Index'; // Default action is 'Index'

                // If Tag Helpers are not present, fall back to parsing the href
                if (!controller) {
                    const href = link.getAttribute('href');

                    if (href) {
                        if (href.startsWith('/')) {
                            // Case: /Controller/Action
                            const parts = href.substring(1).split('/').filter(p => p.length > 0);
                            if (parts.length > 0) {
                                controller = parts[0];
                                action = parts.length > 1 ? parts[1] : 'Index';
                            }
                        } else if (href.startsWith('#')) {
                            // Case: #page (e.g., #analytics). Use hash as controller/page name.
                            controller = href.substring(1).split('/')[0];
                            action = 'Index';
                        }
                    } else if (dataPageAttr) {
                         // Fallback: Use data-page as controller (Common for single-page apps)
                         controller = dataPageAttr;
                         action = 'Index';
                    }
                }

                console.log(`Attempting to load: ${controller}/${action}`);

                if (controller) {
                    // Update active state immediately
                    navLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');

                    // Load the new content via AJAX
                    loadPage(controller, action);
                }
            });
        });

        // --------------------------------------
        // 3. Initial Load and Animation
        // --------------------------------------

        // Apply initial translation and set direction based on HTML dir attribute
        setPageDirection(currentLang);
        translateContent(currentLang);
        document.addEventListener('DOMContentLoaded', applyAnimations);
    </script>

