    <div class="my-modal">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="close">
                    <i class="fa-solid fa-xmark"></i>
                </button>
                <img src="@Url.Content(Model.ThumbnailUrl)" alt="@Model.NameAr" />
            </div>

            <div class="modal-body">
                <div class="product-details">
                    <h3 class="title">@Model.NameAr</h3>
                    <span class="price">@Model.BasePrice ج.م</span>
                </div>

                <p class="description">@Model.DescriptionAr</p>

                <section class="topping">
                    @foreach (var group in Model.ItemToppingGroups)
                    {
                        <div class="topping-header">
                            <h4 class="title">
                                <i class="fa-solid fa-utensils"></i> @group.TitleAr
                            </h4>
                            @if (group.MinAllowedOptions >= 1)
                            {
                                <span class="topping-requirement">مطلوب @group.MinAllowedOptions اختيار</span>
                            }
                            else
                            {
                                <span class="topping-requirement">اختياري حتي @group.MaxAllowedOptions خيار</span>
                            }
                        </div>

                        <section class="topping-options">
                            @foreach (var option in group.ToppingOptions)
                            {
                                <button type="button" class="topping-item"
                                        data-selected="false"
                                        data-group-id="@group.Id"
                                        data-option-id="@option.Id"
                                        data-option-price="@option.Price"
                                        data-max-allowed="@group.MaxAllowedOptions"
                                        data-min-allowed="@group.MinAllowedOptions"
                                        data-image-url="@Url.Content(option.ImageUrl ?? Model.ThumbnailUrl)">
                                    <picture class="topping-image">
                                        <img class="topping-img" src="@Url.Content(option.ImageUrl ?? Model.ThumbnailUrl)" alt="@option.NameAr" />
                                    </picture>

                                    <h2 class="topping-name">@option.NameAr</h2>
                                    <span class="topping-price">
                                        <span class="amount">@option.Price</span>
                                        <span class="currency">ج.م</span>
                                    </span>

                                    @if (group.MaxAllowedOptions == 1)
                                    {
                                        <i class="fa-regular fa-circle selected-icon radio-unselected"></i>
                                        <i class="fa-regular fa-circle-check selected-icon radio-selected"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-regular fa-square selected-icon checkbox-unselected"></i>
                                        <i class="fa-regular fa-square-check selected-icon checkbox-selected"></i>
                                    }
                                </button>
                            }
                        </section>
                    }
                </section>
            </div>

            <div class="modal-footer">
                <div class="footer-content">
                    <div class="counter-container">
                        <button type="button" class="counter-btn decrement" aria-label="Decrease quantity">−</button>
                        <span id="counterValue">1</span>
                        <button type="button" class="counter-btn increment" aria-label="Increase quantity">+</button>
                    </div>
                    <button type="button" class="checkout-btn">
                        <span class="button-text">
                            <span>إضافة</span>
                            <span class="price" id="totalPrice">@Model.BasePrice <span class="currency">جنيه</span></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <script id="modal-data" type="application/json">
            @Html.Raw(JsonConvert.SerializeObject(Model))
        </script>
    </div>

