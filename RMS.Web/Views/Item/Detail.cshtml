@using Newtonsoft.Json
@model ItemDetailsViewModel

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        /* CSS is unchanged as it's already well-written */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            sc/* rollbar-width: none; */
            -ms-overflow-style: none;
        }

            body::-webkit-scrollbar {
                display: none;
            }

        :root {
            --primary-blue: #137dfd;
            --primary-blue-dark: #0a5bc7;
            --secondary-blue: #0865d3;
            --light-blue: #b7e3fe;
            --very-light-blue: #f2f5fd;
            --purple-header: #b3adff;
            --text-dark: #000000;
            --text-muted: #556780;
            --white: #ffffff;
            --shadow-light: rgba(6, 5, 50, 0.12);
            --shadow-medium: rgba(6, 5, 50, 0.25);
            --border-radius: 16px;
            --transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        /* Modal Structure */
        .my-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: linear-gradient(135deg, var(--light-blue) 0%, var(--very-light-blue) 100%);
            overflow-y: auto;
            z-index: 1000;
            display: flex;
            flex-direction: column;
        scrollbar-width: none;
     
    }

        .modal-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header */
        .modal-header {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 40vh;
            min-height: 40vh;
            max-height: 350px;
            background-color: #0a5ca8;
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
            overflow: hidden;
        }

            .modal-header img {
                width: 90%;
                max-width: 280px;
                height: auto;
                max-height: 80%;
                object-fit: contain;
                filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));
                animation: slideInZoom 1s ease-out;
            }

        .close {
            position: absolute;
            top: 15px;
            right: 15px;
            width: 40px;
            height: 40px;
            border: none;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(5px);
            color: var(--text-dark);
            font-size: 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
            z-index: 10;
        }

            .close:hover {
                background: linear-gradient(135deg, rgba(255, 0, 0, 1) 0%, rgba(200, 0, 0, 1) 100%);
                transform: scale(1.15) rotate(90deg);
                color: var(--white);
            }

        /* Body */
        .modal-body {
            flex: 1;
            padding: 20px;
            background-color: transparent;
        scrollbar-width: none;
    }

        .product-details {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 15px;
            margin-bottom: 15px;
            animation: slideInUp 0.8s ease-out 0.3s both;
        }

            .product-details .title {
                font-size: 28px;
                font-weight: bold;
                color: var(--text-dark);
                flex: 1;
            }

            .product-details .price {
                color: var(--secondary-blue);
                font-size: 25px;
                font-weight: bold;
                white-space: nowrap;
            }

        .description {
            line-height: 1.6;
            font-size: clamp(14px, 3vw, 18px);
            color: var(--text-muted);
            margin-bottom: 25px;
            animation: slideInUp 0.8s ease-out 0.5s both;
        }

        /* Topping Groups */
        .topping {
            margin-bottom: 25px;
            animation: slideInUp 0.8s ease-out calc(0.7s + var(--delay, 0s)) both;
            margin-bottom:120px;
        }

            .topping:nth-child(n+3) {
                --delay: calc((var(--index, 0)) * 0.1s);
            }

        .topping-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 10px;
        }

            .topping-header .title {
                font-size: 22px;
                font-weight: bold;
                color: var(--text-dark);
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .topping-header span {
                font-size: clamp(12px, 2.5vw, 15px);
                background: #afdbfa;
                color: var(--text-dark);
                padding: 4px 8px;
                border-radius: 8px;
            white-space: nowrap;
            }
    /* Strong red highlight with smooth bounce + glow */
    .warning {
        color: #b71c1c !important;
        font-size: 1em !important;
        font-weight: bold !important;
        border: 2px solid #f44336 !important;
        border-radius: 6px;
        padding: 6px 12px;
        background-color: #ffebee !important;
        animation: bounceGlow 1s ease-in-out;
        transition: all 0.3s ease-in-out;
    }

    .topping-header.warning-header {
        border: 1px solid red;
        padding: 10px;
        border-radius: 20px;
        background: #e5b7b7;
        transition: all 0.3s ease-in-out;
    }


    /* Bounce + glow animation */
    @@keyframes bounceGlow {
        0%

    {
        transform: scale(1);
        box-shadow: 0 0 0 rgba(244,67,54,0.4);
    }

    30% {
        transform: scale(1.15);
        box-shadow: 0 0 15px rgba(244,67,54,0.6);
    }

    60% {
        transform: scale(0.95);
        box-shadow: 0 0 10px rgba(244,67,54,0.5);
    }

    100% {
        transform: scale(1);
        box-shadow: 0 0 0 rgba(244,67,54,0.4);
    }

    }

    /* Extra subtle pulse after bounce (if you want a repeating soft effect) */
    .pulse {
        animation: softPulse 1.8s ease-in-out infinite;
    }

    @@keyframes softPulse {
        0%, 100%

    {
        box-shadow: 0 0 0 rgba(244,67,54,0.2);
    }

    50% {
        box-shadow: 0 0 12px rgba(244,67,54,0.4);
    }

    }



   

        /* Topping Options */
        .topping-options {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            gap: 12px;
            margin-bottom: 16px;
        }

         /*    .topping-options > :last-child {
                margin-bottom: 96px;
            }
 */

        .topping-item {
            position: relative;
            padding: 10px;
            background: var(--white);
            border: none;
            border-radius: var(--border-radius);
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 180px;
            cursor: pointer;
            transition: var(--transition);
            animation: staggeredSlideIn 0.6s ease-out calc(0.9s + var(--item-delay, 0s)) both;
        }

            .topping-item:nth-child(n) {
                --item-delay: calc(var(--index, 0) * 0.05s);
            }

            .topping-item:hover {
                box-shadow: var(--shadow-medium) 0px 8px 35px;
                transform: translateY(-4px) scale(1.02);
                border-color: rgba(19, 125, 253, 0.3);
            }

        .topping-image {
            width: 100%;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 8px;
        }

        .topping-img {
            max-width: 80px;
            max-height: 80px;
            object-fit: scale-down;
            transition: transform 0.3s ease;
            animation: floatingBounce 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55) calc(1s + var(--item-delay, 0s)) both;
        }

        .topping-item:hover .topping-img {
            transform: scale(1.1) rotate(2deg);
        }

        .topping-name {
            font-size: 16.5px;
            font-weight: bold;
            text-align: center;
            line-height: 1.4;
            margin: 5px 0;
            flex: 1;
            min-height: 40px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .topping-price {
            font-weight: 600;
            font-size: 16px;
            margin-top: auto;
            padding-bottom: 10px;
        }

        /* Selection Icons */
        .selected-icon {
            position: absolute;
            top: 8px;
            right: 8px;
            font-size: 18px;
            transition: var(--transition);
        }

        /* Hide/Show Icons Based on Selection State and Type */
        .topping-item[data-selected="false"] .radio-selected,
        .topping-item[data-selected="false"] .checkbox-selected {
            display: none;
        }

        .topping-item[data-selected="true"] .radio-unselected,
        .topping-item[data-selected="true"] .checkbox-unselected {
            display: none;
        }

        /* Selected State Styling */
        .topping-item[data-selected="true"] {
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            border-color: var(--primary-blue-dark);
            transform: scale(1.02);
            box-shadow: rgba(19, 125, 253, 0.4) 0px 8px 25px, inset 0px 1px 0px rgba(255, 255, 255, 0.2);
           /*  animation: pulseGlow 2s infinite; */
        }

            .topping-item[data-selected="true"] .topping-name,
            .topping-item[data-selected="true"] .topping-price,
            .topping-item[data-selected="true"] .selected-icon {
                color: var(--white);
            }

            .topping-item[data-selected="true"] .selected-icon {
                transform: scale(1.2) rotate(360deg);
                filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
            }

        /* Footer */
        .modal-footer {
            background-color: var(--white);
            padding: 15px 20px;
            box-shadow: 0 -4px 15px rgba(0, 0, 0, 0.1);
            border-top: 1px solid #e0e0e0;
            position: fixed;
            width:100%;
            bottom: 0;
          /*   animation: slideUpFooter 0.4s ease-out 0.4s both; */
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 15px;
        }

        .counter-container {
            background-color: #f8f8f8;
            border-radius: 8px;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            min-width: 136px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .counter-btn {
            background: linear-gradient(135deg, var(--secondary-blue) 0%, var(--primary-blue-dark) 100%);
            color: var(--white);
            border: none;
            border-radius: 6px;
            width: 35px;
            height: 35px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            padding: 20px 0;
        }

            .counter-btn:hover:not(:disabled) {
                background: linear-gradient(135deg, var(--primary-blue-dark) 0%, #0540a3 100%);
                transform: scale(1.1);
                box-shadow: 0 4px 15px rgba(8, 101, 211, 0.4);
            }

            .counter-btn:disabled {
                background-color: #ccc;
                cursor: not-allowed;
            }

        #counterValue {
            min-width: 30px;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            user-select: none;
        }

        .checkout-btn {
            flex: 1;
            background: linear-gradient(135deg, var(--secondary-blue) 0%, var(--primary-blue-dark) 100%);
            color: var(--white);
            border: none;
            border-radius: 8px;
            padding: 12px 20px;
            font-size: clamp(16px, 3vw, 20px);
            font-weight: bold;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: 0 4px 15px rgba(8, 101, 211, 0.3);
            position: relative;
            overflow: hidden;
        }

        .button-text {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .checkout-btn:hover {
            background: linear-gradient(135deg, var(--primary-blue-dark) 0%, #0540a3 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(8, 101, 211, 0.4);
        }

        .checkout-btn .price.updated {
            animation: fadeInUp 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        /* Animations */
        @@keyframes slideInZoom {
            0% {
                transform: translateX(-100%) scale(0.8);
                opacity: 0;
            }

            100% {
                transform: translateX(0) scale(1);
                opacity: 1;
            }
        }

        @@keyframes slideInUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes staggeredSlideIn {
            0% {
                opacity: 0;
                transform: translateY(20px) scale(0.9);
            }

            100% {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        @@keyframes floatingBounce {
            0% {
                opacity: 0;
                transform: translateY(-10px) scale(0.8) rotate(-5deg);
            }

            50% {
                opacity: 0.8;
                transform: translateY(5px) scale(1.05) rotate(2deg);
            }

            100% {
                opacity: 1;
                transform: translateY(0) scale(1) rotate(0deg);
            }
        }

        @@keyframes slideUpFooter {
            0% {
                transform: translateY(100%);
                opacity: 0;
            }

            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @@keyframes pulseGlow {
            0%, 100% {
                box-shadow: rgba(19, 125, 253, 0.4) 0px 8px 25px, inset 0px 1px 0px rgba(255, 255, 255, 0.2);
            }

            50% {
                box-shadow: rgba(19, 125, 253, 0.6) 0px 12px 35px, inset 0px 1px 0px rgba(255, 255, 255, 0.3);
            }
        }

        @@keyframes fadeInUp {
            0% {
                transform: translateY(10px);
                opacity: 0;
            }

            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @@keyframes fadeOut {
            0% {
                opacity: 1;
            }

            100% {
                opacity: 0;
            }
        }

