        .sub-menu-item:hover {
            background: var(--surface);
            color: var(--primary-color);
            border-left-color: var(--primary-color);
            padding-right: 24px;
        }

        .sub-menu-item i {
            font-size: 16px;
            width: 20px;
            text-align: center;
        }

        /* Language Toggle */
        .language-toggle {
            display: flex;
            background: var(--surface-hover);
            border-radius: var(--border-radius);
            padding: 4px;
            margin: 0 20px;
        }

        .language-option {
            flex: 1;
            background: none;
            border: none;
            padding: 8px 12px;
            border-radius: 8px;
            cursor: pointer;
            transition: var(--transition);
            font-weight: 500;
            color: var(--text-secondary);
        }

            .language-option.active {
                background: var(--primary-color);
                color: white;
                box-shadow: 0 2px 4px rgba(0, 82, 163, 0.3);
            }

        /* Social Media Icons */
        .social-media {
            display: flex;
            justify-content: center;
            gap: 16px;
            padding: 16px 20px 0;
        }

        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 44px;
            height: 44px;
            border-radius: 50%;
            color: white;
            text-decoration: none;
            font-size: 18px;
            transition: var(--transition);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

            .social-icon.facebook {
                background: #1877f2;
            }

            .social-icon.instagram {
                background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
            }

            .social-icon.whatsapp {
                background: #25d366;
            }

            .social-icon:hover {
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
            }

        /* Sidebar Footer */
        .sidebar-footer {
            padding: 20px;
            border-top: 1px solid var(--border);
            background: var(--surface);
        }

        .logout-btn {
            width: 100%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            border: none;
            padding: 16px 20px;
            border-radius: var(--border-radius);
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin-bottom: 12px;
        }

            .logout-btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 6px 20px rgba(0, 82, 163, 0.3);
            }

        .powered-by {
            text-align: center;
            font-size: 12px;
            color: var(--text-muted);
            font-weight: 500;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .sidebar-menu

        {
            width: 280px;
        }

        .menu-item {
            padding: 14px 16px;
        }

        .sidebar-header {
            padding: 20px 16px;
        }

        }

        @@media (max-width: 480px) {
            .sidebar-menu

        {
            width: 100vw;
