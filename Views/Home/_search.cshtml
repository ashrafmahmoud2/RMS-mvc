<div class="search ">
    <div class="container">
        <input type="text" class="search__input" placeholder="ما الذي تبحث عنه؟ ......" value="">
    </div>
</div>

<style>

    /* Search Styles */
    .search {
        margin-top: 25px;
        width: 100%;
    }

    .search__input {
        /* font-family: 'Droid Arabic Kufi', Arial, sans-serif; */
        /* Match the font for input text */
        font-size: 25px;
        color: #333;
        /* Default text color */
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #ccc;
        border-radius: 15px;
        outline: none;
        background-color: #ffffff;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        /* Smooth border and shadow transition */
    }

        .search__input:focus {
            border-color: #007bff;
            /* Change border color on focus */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            /* Add glow effect */
        }

        .search__input::placeholder {
            color: #aaa;
            /* Placeholder color */
            transition: color 0.3s ease;
            /* Smooth placeholder fade effect */
            font-size: 15px;
        }

        .search__input:focus::placeholder {
            color: #007bff;
            /* Change placeholder color on focus */
        }

    .search__button i {
        /* font-family: 'Scheherazade', Arial, sans-serif; */
        color: white;
        font-size: 16px;
        transition: transform 0.3s ease;
        /* Smooth hover scaling effect */
    }

    .search__button:hover i {
        transform: scale(1.2);
        /* Slightly enlarge button on hover */
    }

</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.querySelector('.search__input');

        searchInput.addEventListener('keyup', function () {
            const searchQuery = this.value; // Get the current value of the input field
            const container = document.getElementById('product-grid-container');

            // Use the Fetch API to make an AJAX request
            fetch(`/Home/SearchResults?searchQuery=${searchQuery}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text(); // Get the HTML from the partial view
                })
                .then(html => {
                    container.innerHTML = html; // Replace the container's content with the new HTML
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                });
        });
    });
</script>