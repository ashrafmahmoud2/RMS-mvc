<script>
    // ================== Phone Input JS ==================
    let phoneState = {
        isValid: false,
        isSubmitting: false,
        phoneNumber: ''
    };

    // Selectors
    const phoneInput = document.getElementById("phoneInput");
    const phoneInputWrapper = document.getElementById("phoneInputWrapper");
    const continuePhoneBtn = document.getElementById("continuePhone");
    const phoneError = document.getElementById("phoneError");
    const loadingSpinner = document.getElementById("loadingSpinner");
    const continueText = document.querySelector(".continue-text");

    // ================== Helpers ==================
    const showError = (msg) => {
        phoneError.textContent = msg;
        phoneError.style.display = "block";
        phoneInputWrapper.classList.add("error");
        phoneInputWrapper.classList.remove("success");
    };

    const hideError = () => {
        phoneError.style.display = "none";
        phoneInputWrapper.classList.remove("error");
    };

    const validateEgyptianPhone = (phone) => {
        const regex = /^01[0125][0-9]{8}$/; // نفس اللي عندك
        if (!regex.test(phone)) {
            return { valid: false, message: "رقم الهاتف يجب أن يبدأ بـ 010 أو 011 أو 012 أو 015 ويكون 11 رقم" };
        }
        return { valid: true, message: "" };
    };

    const updateButtonState = () => {
        continuePhoneBtn.disabled = !phoneState.isValid || phoneState.isSubmitting;
    };

    const setLoadingState = (loading) => {
        phoneState.isSubmitting = loading;
        continueText.style.display = loading ? "none" : "block";
        loadingSpinner.style.display = loading ? "block" : "none";
        updateButtonState();
    };

    async function sendOtp(phone) {
        try {
            setLoadingState(true);

            const response = await fetch('@Url.Action("SendOtp", "Account")', {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({ phoneNumber: phone })
            });

            if (response.ok) {
                // const html = await response.text();
                // document.getElementById("otpContainer").innerHTML = html;
            } else {
                const error = await response.text();
                showError(error || "تعذر إرسال الرمز");
            }
        } catch (err) {
            console.error("Error sending OTP:", err);
            showError("حدث خطأ أثناء إرسال الرمز.");
        } finally {
            setLoadingState(false);
        }
    }

    // ================== Event Handlers ==================
    phoneInput.addEventListener("input", (e) => {
        let value = e.target.value.replace(/\D/g, ''); // Only digits

        if (value.length > 11) {
            value = value.substring(0, 11);
        }

        e.target.value = value;
        phoneState.phoneNumber = value;

        hideError();

        if (value.length === 0) {
            phoneState.isValid = false;
            phoneInputWrapper.classList.remove("success", "error");
        } else {
            const validation = validateEgyptianPhone(value);
            phoneState.isValid = validation.valid;

            if (validation.valid) {
                phoneInputWrapper.classList.add("success");
                phoneInputWrapper.classList.remove("error");
            } else if (value.length >= 10) {
                showError(validation.message);
            }
        }

        updateButtonState();
    });

    continuePhoneBtn.addEventListener("click", async () => {
        if (!phoneState.isValid || phoneState.isSubmitting) return;

        // ابعت الرقم زي ما هو من غير +20
        await sendOtp(phoneState.phoneNumber);
    });
</script>

