<body>
    <div class="my-modal">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="close" onclick="closeModal()">
                    <i class="fa-solid fa-xmark"></i>
                </button>
                <img src="@Url.Content(Model.ThumbnailUrl)" alt="@Model.NameAr" />
            </div>

            <div class="modal-body">
                <div class="product-details">
                    <h3 class="title">@Model.NameAr</h3>
                    <span class="price">@Model.BasePrice ج.م</span>
                </div>

                <p class="description">@Model.DescriptionAr</p>
                      <section class="topping">
          @foreach (var group in Model.ItemToppingGroups)
          {
            <div class="topping-header">
              <h4 class="title">
                <i class="fa-solid fa-utensils"></i> @group.TitleAr
              </h4>
              @if (group.MaxAllowedOptions > 1)
              {
                <span>مطلوب</span>
              }
            </div>

            <section class="topping-options">
              @foreach (var option in group.ToppingOptions)
              {
                <button type="button" class="topping-item" data-selected="false" onclick="toggleTopping(@option.Id)">
                  <picture class="topping-image">
                    <img class="topping-img" src="@Url.Content(Model.ThumbnailUrl)" alt="@option.NameAr" />
                  </picture>
                  <h2 class="topping-name">@option.NameAr</h2>
                  <span class="topping-price">
                    <span class="amount">@option.Price</span>
                    <span class="currency">ج.م</span>
                  </span>
                  <i class="fa-regular fa-circle selected-icon"></i>
                  <i class="fa-regular fa-circle-check selected-icon"></i>
                </button>
              }
            </section>
          }
        </section>
            </div>

            <div class="modal-footer">
                <div class="footer-content">
                    <div class="counter-container">
                        <button type="button" class="counter-btn decrement" aria-label="Decrease quantity" onclick="decrementCounter()">−</button>
                        <span id="counterValue">1</span>
                        <button type="button" class="counter-btn increment" aria-label="Increase quantity" onclick="incrementCounter()">+</button>
                    </div>
                    <button type="button" class="checkout-btn" onclick="addToCart()">
                        <span class="button-text">
                            <span>إضافة</span>
                            <span class="price" id="totalPrice">45 <span class="currency">جنيه</span></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let quantity = 1;
        let basePrice = 45;
        let selectedToppings = {};

        function toggleTopping(toppingId) {
            const toppingButton = document.querySelector(`[onclick="toggleTopping(${toppingId})"]`);
            const isSelected = toppingButton.getAttribute('data-selected') === 'true';

            toppingButton.setAttribute('data-selected', !isSelected);

            const priceElement = toppingButton.querySelector('.amount');
            const toppingPrice = parseInt(priceElement.textContent);

            if (!isSelected) {
                selectedToppings[toppingId] = toppingPrice;
            } else {
                delete selectedToppings[toppingId];
            }

            updateTotalPrice();
        }

        function incrementCounter() {
            quantity++;
            document.getElementById('counterValue').textContent = quantity;
            updateTotalPrice();
        }

        function decrementCounter() {
            if (quantity > 1) {
                quantity--;
                document.getElementById('counterValue').textContent = quantity;
                updateTotalPrice();
            }
        }

        function updateTotalPrice() {
            const toppingsTotal = Object.values(selectedToppings).reduce((sum, price) => sum + price, 0);
            const totalPrice = (basePrice + toppingsTotal) * quantity;

            const priceElement = document.getElementById('totalPrice');
            priceElement.textContent = totalPrice;
            priceElement.classList.add('updated');

            setTimeout(() => {
                priceElement.classList.remove('updated');
            }, 400);
        }

        function closeModal() {
            const modal = document.querySelector('.my-modal');
            modal.style.animation = 'fadeOut 0.3s ease-in-out';
            setTimeout(() => {
                modal.style.display = 'none';
            }, 300);
        }

        function addToCart() {
            alert(`تم إضافة ${quantity} من البرجر إلى السلة بقيمة ${document.getElementById('totalPrice').textContent} جنيه`);
            closeModal();
        }

        // Add fade out animation
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes fadeOut {
                0% { opacity: 1; }
                100% { opacity: 0; }
            }
        `;
